<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/shape"
    tools:context=".MainActivity"
    android:baselineAligned="false">

    <TextView android:text="Fuel Edit"
        android:id="@+id/tvRefuelSaveTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:text="@string/tv_Refuel_Date"
        android:id="@+id/tvRefuelSaveDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left|center_vertical"/>

    <EditText android:id="@+id/etRefuelSaveDate"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:editable="false"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView android:text="@string/tv_Refuel_Type"
        android:id="@+id/tvRefuelSaveTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left|center_vertical"/>

    <Spinner android:id="@+id/spRefuelSaveType"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:prompt="@string/s_Choose_Fuel_Type"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="-20dp">
    </Spinner>


    <TextView android:text="@string/tv_Refuel_Quantity"
        android:id="@+id/tvRefuelSaveQuantityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left|center_vertical"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText android:id="@+id/etRefuelSaveQuantity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:layout_gravity="left"/>

        <TextView android:text="@string/tv_Refuel_Quantity_Unit"
            android:id="@+id/tvRefuelQuantityUnit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:singleLine="true"/>

    </LinearLayout>

    <TextView android:text="@string/tv_Refuel_Pay"
        android:id="@+id/tvRefuelSavePayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left|center_vertical"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText android:id="@+id/etRefuelSavePay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:layout_gravity="left"/>

        <TextView android:text="@string/tv_Refuel_Pay_Unit"
            android:id="@+id/tvRefuelPayUnit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView android:text="@string/tv_Refuel_Odometer"
            android:id="@+id/tvRefuelSaveOdometerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="left|center_vertical"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="horizontal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText android:id="@+id/etRefuelSaveOdometer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:layout_gravity="left"/>

            <TextView android:text="@string/tv_Refuel_Odometer_Unit_Kilometers"
                android:id="@+id/tvRefuelOdometerUnit"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="right"
                android:layout_gravity="bottom"
                android:singleLine="true"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>