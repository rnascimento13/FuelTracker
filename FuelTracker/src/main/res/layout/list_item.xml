<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/refuellist_item_vertical_margin"
    android:paddingBottom="@dimen/refuellist_item_vertical_margin"
    android:id="@+id/relativeLayout"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    >

    <ImageView    android:layout_width="40dp" android:layout_height="40dp"
        android:id="@+id/listTypeImage"
        android:layout_gravity="left"
        android:src="@drawable/ic_x"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true" />

    <TextView    android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/listText"
        android:text="TESTE"
        android:singleLine="true"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/listTypeImage"
        android:layout_toLeftOf="@+id/listText2"
        android:gravity="center" />

    <TextView    android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/listText2"
        android:textSize="12sp"
        android:singleLine="true"
        android:text="TESTE"
        android:gravity="center_vertical"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/listTypeImage"
        android:layout_alignTop="@+id/listTypeImage" />

</RelativeLayout>

